<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcc139"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="#234798"/>

    <ImageView
        android:layout_width="114dp"
        android:layout_height="117dp"
        android:layout_margin="30dp"
        android:src="@drawable/logo_transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:layout_above="@+id/homepage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#fee09c"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="#fcc139"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/welcome_msg"
            android:textColor="#fcc139"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:text="@string/login_button"
            android:textColor="#0e1c3c"
            android:textSize="15sp" />

        <Button
            android:id="@+id/sign_up_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:text="@string/sign_up_button"
            android:textColor="#0e1c3c"
            android:textSize="15sp" />

    </LinearLayout>

    <include
        android:id="@+id/sign_up_layout"
        android:visibility="gone"
        layout="@layout/sign_up" />

    <include
        android:id="@+id/login_layout"
        android:visibility="gone"
        layout="@layout/login" />

    <include
        android:id="@+id/start_page_layout"
        android:visibility="gone"
        layout="@layout/start_page" />

</RelativeLayout>